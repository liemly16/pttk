
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="/admin/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/admin/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Paper Dashboard PRO by Creative Tim</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="/admin/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!--  Paper Dashboard core CSS    -->
    <link href="/admin/assets/css/paper-dashboard.css" rel="stylesheet" />


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="/admin/assets/css/demo.css" rel="stylesheet" />


    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="/admin/assets/css/themify-icons.css" rel="stylesheet">
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-background-color="brown" data-active-color="danger">
            <div class="sidebar-wrapper">

                <div class="logo">
                    <a href="/" class="simple-text logo-mini">
                        PN
                    </a>

                    <a href="/" class="simple-text logo-normal">
                        Phương Nam
                    </a>
                </div>

                <ul class="nav">

                    <li>
                        <a data-toggle="collapse" href="/" aria-expanded="true">
                            <i class="ti-panel"></i>
                            <p>
                                Khuyến Mãi
                                <b class="caret"></b>
                            </p>
                        </a>
                        <div class="collapse in" id="dashboardOverview">
                            <ul class="nav">
                                <li>
                                    <a href="/KhuyenMai">
                                        <span class="sidebar-mini">DS</span>
                                        <span class="sidebar-normal">Danh sách</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/KhuyenMai/Create">
                                        <span class="sidebar-mini">TM</span>
                                        <span class="sidebar-normal">Thêm mới</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default">

            </nav>

            <div class="content">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">

                                <form method="post" action="@Url.Action("UpdateRecord")">
                                    <div class="card-header">
                                        <h4 class="card-title">Thêm Mới Khuyến mãi</h4>
                                    </div>
                                    <div class="card-content">
                                        <div class="form-group">
                                            <label>Loại khuyến mãi</label>
                                            <select  name="loai" class="form-control" >
                                                <option selected value="Trừ tiền">Trừ tiền</option>
                                                <option value="Giảm %">Giảm %</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Ngày bắt đầu</label>
                                            <input value="@Model.Rows[0]["thoiGianBatDau"]" name="thoiGianBatDau" type="datetime" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Ngày kết thúc</label>
                                            <input value="@Model.Rows[0]["thoiGianKetThuc"]" name="thoiGianKetThuc" type="datetime" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Tên khuyến mãi</label>
                                            <input value="@Model.Rows[0]["ten"]" name="ten" type="text" placeholder="" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Giá trị</label>
                                            <input value="@Model.Rows[0]["giaTri"]" name="giaTri" type="number" placeholder="" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Tổng tiền thấp nhất</label>
                                            <input value="@Model.Rows[0]["tongTienThapNhat"]" name="tongTienThapNhat" type="number" placeholder="" class="form-control">
                                        </div>

                                        <input type="hidden" name="ma" value="@Model.Rows[0]["ma"].ToString()" />  

                                        <input type="submit" class="btn btn-fill btn-info" value="Submit" name="action" />
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>
</body>

<!--   Core JS Files. Extra: TouchPunch for touch library inside jquery-ui.min.js   -->
<script src="/admin/assets/js/jquery-3.1.1.min.js" type="text/javascript"></script>
