@using System.Data
@using System.Data.SqlClient
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="/admin/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/admin/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Paper Dashboard PRO by Creative Tim</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="/admin/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!--  Paper Dashboard core CSS    -->
    <link href="/admin/assets/css/paper-dashboard.css" rel="stylesheet" />


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="/admin/assets/css/demo.css" rel="stylesheet" />


    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="/admin/assets/css/themify-icons.css" rel="stylesheet">
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-background-color="brown" data-active-color="danger">
            <div class="sidebar-wrapper">
                
                <div class="logo">
                    <a href="/" class="simple-text logo-mini">
                        PN
                    </a>

                    <a href="/" class="simple-text logo-normal">
                        Phương Nam
                    </a>
                </div>

                <ul class="nav">

                    <li class="active">
                        <a data-toggle="collapse" href="/" aria-expanded="true">
                            <i class="ti-panel"></i>
                            <p>
                                Khuyến Mãi
                                <b class="caret"></b>
                            </p>
                        </a>
                        <div class="collapse in" id="dashboardOverview">
                            <ul class="nav">
                                <li class="active">
                                    <a href="/KhuyenMai">
                                        <span class="sidebar-mini">DS</span>
                                        <span class="sidebar-normal">Danh sách</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/KhuyenMai/Create">
                                        <span class="sidebar-mini">TM</span>
                                        <span class="sidebar-normal">Thêm mới</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    @*<li>
                        <a data-toggle="collapse" href="#componentsExamples">
                            <i class="ti-package"></i>
                            <p>
                                components
                                <b class="caret"></b>
                            </p>
                        </a>
                        <div class="collapse" id="componentsExamples">
                            <ul class="nav">
                                <li>
                                    <a href="../components/typography.html">
                                        <span class="sidebar-mini"><i class="ti-panel"></i></span>
                                        <span class="sidebar-normal">Typography</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>*@
                    
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default">
             
            </nav>

            <div class="content">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Khuyến mãi</h4>
                                </div>
                                <div class="card-content table-responsive table-full-width">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th class="text-center">Loại</th>
                                                <th class="text-center">Tên Khuyến Mãi</th>
                                                <th class="text-center">Thời gian bắt đầu</th>
                                                <th class="text-center">Thời gian kết thúc</th>
                                                <th class="text-center">Giá trị</th>
                                                <th class="text-center">Tổng tiền thấp nhất</th>
                                                <th class="text-center">Hành Động</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (DataRow dr in Model.Rows)
                                            {
                                                <tr>
                                                    <td  class="text-center">@dr["loai"]</td>
                                                    <td  class="text-center">@dr["ten"]</td>
                                                    <td  class="text-center">@dr["thoiGianBatDau"]</td>
                                                    <td  class="text-center">@dr["thoiGianKetThuc"]</td>
                                                    <td  class="text-center">@dr["giaTri"]</td>
                                                    <td  class="text-center">@dr["tongTienThapNhat"]</td>
                                                    <td class="td-actions text-center">
                                                        <span>@Html.ActionLink("Delete", "Delete", new { ma = dr["ma"].ToString() })</span>
                                                        <span>@Html.ActionLink("Edit", "Edit", new { ma = dr["ma"].ToString() })</span>

                                                    </td>
                                                </tr>


                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
               
                    </div>

                </div>
            </div>

        </div>
    </div>
</body>

